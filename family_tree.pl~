:- discontiguous father/2.
:- discontiguous mother/2.
:- discontiguous sister/2.
:- discontiguous grandfather/2.
% ------- FACTS -------
father(john, lisa).
mother(mary, lisa).
mother(mary, mike).
sister(lisa, mike).
father(tom, mary).
father(mike, emma).
mother(emma, olivia).
grandfather(tom, olivia).

% ------- RULES -------
parent(X, Y) :- father(X, Y).
parent(X, Y) :- mother(X, Y).

grandmother(X, Y) :-
    mother(X, Z),
    parent(Z, Y).

grandfather(X, Y) :-
    father(X, Z),
    parent(Z, Y).

% To check sibling relation
sister(X, Y) :-
    mother(M, X), mother(M, Y),
    father(F, X), father(F, Y),
    X \= Y.
parent(liz, jim).

% Mother relation
mother(X, Y) :-
    female(X),
    parent(X, Y).

% Father relation
father(X, Y) :-
    male(X),
    parent(X, Y).

% Grandmother relation
grandmother(X, Y) :-
    female(X),
    parent(X, Z),
    parent(Z, Y).

% Grandfather relation
grandfather(X, Y) :-
    male(X),
    parent(X, Z),
    parent(Z, Y).

% Sister relation
sister(X, Y) :-
    female(X),
    parent(Z, X),
    parent(Z, Y),
X \= Y.
% Brother relation
brother(X, Y) :-
male(X),
parent(Z, X),
parent(Z, Y),
X \= Y.
